<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/row_index_labels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/label_index"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:text="@string/label_index"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/label_hall_row"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_hall_row"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/label_hall_place"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_hall_place"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row_index"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_index_labels">

            <TextView
                android:id="@+id/index_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:editable="false"
                android:gravity="center"
                android:maxLength="6"
                android:minHeight="50dp"
                android:singleLine="true"
                android:text="@string/zero_value"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/hall_row_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="0123456789"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="phone"
                android:maxLength="2"
                android:singleLine="true"
                android:text="@string/zero_value"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/hall_place_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="0123456789"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="phone"
                android:maxLength="2"
                android:singleLine="true"
                android:text="@string/zero_value"
                android:textSize="30sp" />

        </TableRow>

        <View
            android:id="@+id/index_number_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row_index"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="8sp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/label_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/index_number_line"
            android:text="@string/label_weight"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp" />

        <TableRow
            android:id="@+id/row_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/label_weight">

            <EditText
                android:id="@+id/weight_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:digits="0123456789"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="phone"
                android:maxLength="6"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textSize="30sp" />


            <Button
                android:id="@+id/button_qr_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:text="@string/button_qr_code" />


        </TableRow>

        <View
            android:id="@+id/weight_row_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row_weight"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="8sp"
            android:background="@android:color/darker_gray" />


        <TableRow
            android:id="@+id/row_result_labels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/weight_row_line">

            <TextView
                android:id="@+id/label_result"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:text="@string/label_result"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/label_result_modulo"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/label_result_modulo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

        </TableRow>


        <TableRow
            android:id="@+id/row_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_result_labels">

            <TextView
                android:id="@+id/result_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:minHeight="50dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/result_modulo_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:minHeight="50dp"
                android:singleLine="true"
                android:text="@string/zero_value"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30sp" />


        </TableRow>

        <View
            android:id="@+id/result_row_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row_result"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="8sp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:id="@+id/row_exam_infos_labels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/result_row_line">

            <TextView
                android:id="@+id/label_subject_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:text="@string/label_subject_value"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/label_exam_id_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/label_exam_id_value"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row_exam_infos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_exam_infos_labels">

            <TextView
                android:id="@+id/subject_value"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:minHeight="50sp"
                android:singleLine="true"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/exam_id_value"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:minHeight="50sp"
                android:singleLine="true"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30sp" />


        </TableRow>


        <TableRow
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_exam_infos">

            <Button
                android:id="@+id/button_exit"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/button_exit" />

            <Button
                android:id="@+id/button_compute"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/button_compute" />

            <Button
                android:id="@+id/button_start_test"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/button_start_test" />

        </TableRow>

    </RelativeLayout>

</ScrollView>
