<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.twohe.mysecondapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/index_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/index_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/index_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/index_title">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/index_number6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/index_number5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/index_number4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/index_number3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/index_number2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/index_number1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:editable="false"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <Button
                android:id="@+id/qr_code_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:ems="10"
                android:text="@string/qr_code_button" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/weight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/index_row"
        android:text="@string/weight_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/weight_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weight_title">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/weight_number6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:inputType="phone"
                android:ems="10"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/weight_number5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:inputType="phone"
                android:ems="10"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/weight_number4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/weight_number3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/weight_number2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                android:id="@+id/weight_number1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:digits="123456789"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="1"
                android:gravity="center" />

            <Button
                android:id="@+id/compute_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:ems="10"
                android:text="@string/compute_button" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weight_row"
        android:text="@string/result_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/result_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/result_title">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/result_number6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_number5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_number4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_number3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_number2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_number1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:minHeight="50dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/result_modulo"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:ems="10"
                android:minHeight="50dp"
                android:text="@string/modulo_result"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/abc_primary_text_material_light" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/result_row">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/exit_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/exit_button" />

            <Button
                android:id="@+id/start_test_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/start_test_button" />

        </TableRow>
    </TableLayout>


</RelativeLayout>
